<Page
    x:Class="idboard_v1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:idboard_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
    	<StackPanel HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="400">
    		<StackPanel.Background>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    				<GradientStop Color="#FF575757" Offset="0.05"/>
    				<GradientStop Color="#FFAFAFAF" Offset="0.6"/>
    				<GradientStop Color="#FFAFAFAF" Offset="0.4"/>
    				<GradientStop Color="#FF575757" Offset="0.95"/>
    				<GradientStop Color="#FF767676" Offset="0.25"/>
    				<GradientStop Color="#FF767676" Offset="0.75"/>
    			</LinearGradientBrush>
    		</StackPanel.Background>
            <Image Height="124" NineGrid="0"  Source="Assets/Logo.png" Margin="0,200,0,10"/>
            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0">
            	<Run Text="CampusID"/>
            	<Run Text=" Sophia Antipolis"/>
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Text="Fondation Sophia Antipolis" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="Place Sophie Laffite" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="06904 Sophia Antipolis" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="Phone : +33 (0)483066660" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <TextBlock TextWrapping="Wrap" Text="http://www.campus-id.com" Margin="0,30,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Page>

